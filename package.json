{
	"name": "zpr",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"wasm": "wasm-pack build --target web ./wasm",
		"build:all": "wasm-pack build --target web ./wasm && vite build",
		"preview": "vite preview",
		"host": "vite preview --host 0.0.0.0",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.4",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-top-level-await": "^1.4.1",
		"vite-plugin-wasm": "^3.3.0",
		"vitest": "^0.34.0",
		"wasm-chess": "file:wasm/pkg"
	},
	"type": "module"
